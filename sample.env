# SteamNoodles Feedback Agent - Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# API KEYS
# =============================================================================

# OpenAI API Key (Required for enhanced LLM features)
# Get your key from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Alternative API Keys (Optional)
# HUGGINGFACE_API_TOKEN=your_huggingface_token_here
# COHERE_API_KEY=your_cohere_api_key_here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application Environment
# Options: development, testing, production
ENVIRONMENT=development

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable/Disable Features
ENABLE_OPENAI=true
ENABLE_TRANSFORMERS=true
ENABLE_RULE_BASED_FALLBACK=true

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# OpenAI Model Settings
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=200

# HuggingFace Model Settings
HUGGINGFACE_MODEL=cardiffnlp/twitter-roberta-base-sentiment-latest
HUGGINGFACE_MAX_LENGTH=512

# =============================================================================
# PROCESSING SETTINGS
# =============================================================================

# Batch Processing Limits
MAX_BATCH_SIZE=100
PROCESSING_TIMEOUT=30

# Confidence Thresholds
MIN_CONFIDENCE_THRESHOLD=0.1
HIGH_CONFIDENCE_THRESHOLD=0.8

# =============================================================================
# OUTPUT SETTINGS
# =============================================================================

# File Paths
DATA_DIR=./data
OUTPUT_DIR=./outputs
LOGS_DIR=./logs

# Plot Settings
PLOT_DPI=300
PLOT_FORMAT=png
PLOT_STYLE=seaborn-v0_8

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Cache Settings
ENABLE_CACHING=true
CACHE_TTL=3600

# Rate Limiting
API_RATE_LIMIT=60
API_RATE_WINDOW=60

# =============================================================================
# TESTING SETTINGS
# =============================================================================

# Test Configuration
GENERATE_TEST_DATA=true
TEST_DATA_SIZE=50
ENABLE_PERFORMANCE_TESTS=true

# Mock Settings (for testing without API keys)
USE_MOCK_RESPONSES=false
MOCK_RESPONSE_DELAY=0.1

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=1.0
EXPONENTIAL_BACKOFF=true

# Memory Management
MAX_MEMORY_USAGE=500  # MB
ENABLE_GARBAGE_COLLECTION=true

# Security Settings
ENABLE_INPUT_VALIDATION=true
MAX_INPUT_LENGTH=5000
SANITIZE_OUTPUTS=true

# =============================================================================
# NOTIFICATION SETTINGS (Optional)
# =============================================================================

# Email Notifications
ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Webhook Notifications
ENABLE_WEBHOOKS=false
WEBHOOK_URL=https://your-webhook-url.com/notifications

# =============================================================================
# DATABASE SETTINGS (Future Enhancement)
# =============================================================================

# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/steamnoodles.db
DATABASE_POOL_SIZE=10

# =============================================================================
# MONITORING SETTINGS
# =============================================================================

# Performance Monitoring
ENABLE_METRICS=true
METRICS_COLLECTION_INTERVAL=60
SAVE_PERFORMANCE_LOGS=true

# Health Check Settings
HEALTH_CHECK_INTERVAL=300
ALERT_ON_FAILURES=true

# =============================================================================
# NOTES
# =============================================================================

# 1. This application can run without any API keys using fallback methods
# 2. For best results, provide at least the OPENAI_API_KEY
# 3. All paths are relative to the project root directory
# 4. Boolean values should be: true/false (lowercase)
# 5. Numeric values should not be quoted
# 6. String values with spaces should be quoted

# Example minimal configuration:
# OPENAI_API_KEY=sk-your-key-here
# LOG_LEVEL=INFO
# ENVIRONMENT=development